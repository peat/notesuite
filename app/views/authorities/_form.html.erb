<%= form_with(model: authority) do |form| %>
  <% if authority.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(authority.errors.count, "error") %> prohibited this authority from being saved:</h2>

      <ul>
        <% authority.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table class="input-table">
    <tr>
      <th>
        <label for="authority_short_name">Name:</label>
      </th>
      <td>
        <%= form.text_field :name %>
      </td>
    </tr>
    <tr>
      <th>
        <label for="authority_region">Region:</label>
      </th>
      <td>
        <%= form.collection_select :region_id, Region.all, :id, :short_name %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= form.submit "Submit", class: "button" %>
      </td>
  </table>
<% end %>
