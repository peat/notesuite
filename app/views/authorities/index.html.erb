<p style="color: green"><%= notice %></p>

<h1 class="text-2xl font-bold my-5">Authorities <span class="font-normal">(<%= Authority.count %>)</span></h1>

<div class="my-2">
<%= link_to 'Add Authority', new_authority_path, class: "button" %>
</div>

<table class="index-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th>Currencies</th>
      <th>Masters</th>
      <th>Created</th>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @authorities.each do |authority| %>
    <tr>
      <td><%= link_to authority.name, authority %></td>
      <td><%= authority.region.short_name %></td>
      <td><%= authority.currencies.count %></td>
      <td><%= authority.masters.count %></td>
      <td class="system text-sm"><%= authority.created_at.to_date.to_formatted_s(:iso8601) %></td>
      <td class="system text-sm"><%= authority.updated_at.to_date.to_formatted_s(:iso8601) %></td>
      <td><%= link_to "✏️", edit_authority_path(authority) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
